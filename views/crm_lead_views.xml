<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_view_form_inherit_date_closed" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.date.closed</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <field name="date_closed" position="replace">
                <label for="date_closed"/>
                <div class="o_row">
                    <field name="date_closed" 
                           attrs="{'readonly': [('date_closed_editable', '=', False)]}"/>
                    <button name="toggle_date_closed" 
                            type="object"
                            icon="fa-pencil"
                            class="oe_edit_only"
                            attrs="{'invisible': [('date_closed_editable', '=', True)]}"/>
                    <field name="date_closed_editable" invisible="1"/>
                </div>
            </field>
        </field>
    </record>
</odoo>
