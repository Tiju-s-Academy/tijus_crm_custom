<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_view_form_inherit_date_closed" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.date.closed</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <field name="date_closed" position="attributes">
                <attribute name="attrs">{'readonly': [('date_closed_editable', '=', False)]}</attribute>
            </field>
            <field name="date_closed" position="after">
                <button name="toggle_date_closed_edit" 
                        type="object"
                        string="Edit"
                        class="oe_link oe_inline"
                        attrs="{'invisible': [('date_closed_editable', '=', True)]}"/>
                <button name="toggle_date_closed_edit" 
                        type="object"
                        string="Lock"
                        class="oe_link oe_inline"
                        attrs="{'invisible': [('date_closed_editable', '=', False)]}"/>
                <field name="date_closed_editable" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
